{
  "name": "pages-of-history",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json",
    "rename:media": "node scripts/maintenance/rename-media.mjs",
    "data:bake": "tsx src/Data/StaticDataCompiler.ts",
    "data:schema": "tsx scripts/tools/generateSchema.ts",
    "data:update": "pnpm data:bake && pnpm data:schema",
    "test": "vitest run",
    "test:watch": "vitest",
    "preinstall": "only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fix": "node scripts/maintenance/fix.mjs",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "build:dev": "cross-env FAIL_ON_WARNINGS=1 vite build --mode development",
    "precommit:all": "node scripts/maintenance/precommit-all.mjs",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "@babylonjs/core": "^8.41.2",
    "@babylonjs/gui": "^8.42.0",
    "@babylonjs/materials": "^8.41.2",
    "@floating-ui/dom": "^1.7.4",
    "@fontsource/dm-sans": "^5.2.8",
    "@fontsource/poiret-one": "^5.2.8",
    "@fontsource/roboto": "^5.2.9",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/vue-fontawesome": "^3.1.2",
    "@urbanzoo/remove-accents": "^1.0.2",
    "@vueuse/core": "^14.1.0",
    "change-case": "^5.4.4",
    "indefinite": "^2.5.2",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "pluralize": "^8.0.0",
    "seedrandom": "^3.0.5",
    "tinyqueue": "^3.0.0",
    "ts-pattern": "^5.9.0",
    "vite-plugin-pwa": "^1.2.0",
    "vue": "^3.5.25",
    "vue-router": "^4.6.4",
    "vue-sonner": "^1.3.0",
    "vuetify": "^3.11.4",
    "workbox-window": "^7.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.4",
    "@types/pluralize": "^0.0.33",
    "@types/seedrandom": "^3.0.8",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "msw": "^2.12.7",
    "only-allow": "^1.2.2",
    "prettier": "^3.7.4",
    "sass": "^1.97.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^7.7.9",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^4.0.16",
    "vitest-canvas-mock": "^1.1.3",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.8"
  }
}
